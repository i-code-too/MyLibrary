<h2 class="page-header page-header-pink"><%= book.title %></h2>
<div class="book-details">
    <div class="book-image-container">
        <img class="book-cover" src="<%= book.coverImagePath %>">
        <div class="book-details-btn-grid">
            <a class="btn btn-secondary" href="/books/<%= book.id %>/edit">Edit</a>
            <%- include('../partials/deleteForm.ejs', {url: `/books/${book.id}`}) %>
            <a class="btn btn-primary book-details-author-btn" href="/authors/<%= book.author.id %>">View Author</a>
        </div>
    </div>
    <div class="book-details-grid">
        <div class="book-details-label">Author: </div>
        <div><%= book.author.name %></div>
        <div class="book-details-label">Published on: </div>
        <div><%= book.publishDate.toISOString().split('T')[0] %></div>
        <div class="book-details-label">Page Count: </div>
        <div><%= book.pageCount %></div>
        <div class="book-details-label">Description: </div>
        <div><%= book.description %></div>
    </div>
</div>